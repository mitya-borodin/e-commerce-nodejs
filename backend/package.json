{
  "scripts": {
    "compile": "del dist && tsc",
    "dev": "nodemon src/entry.ts",
    "dev:debug": "nodemon --inspect src/entry.ts",
    "fmt": "prettier --write '**/*.{js,ts}'",
    "fmt:pkg": "prettier-package-json --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "@rtcts/isomorphic": "^1.3.1",
    "@rtcts/node": "^1.3.1",
    "@rtcts/utils": "^1.3.1",
    "bson": "^4.0.4",
    "chalk": "^4.1.0",
    "co-body": "^6.0.0",
    "dotenv": "^8.2.0",
    "eventemitter3": "^4.0.4",
    "file-type": "^14.7.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-compress": "^5.0.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.1.0",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "moment": "^2.27.0",
    "mongodb": "^3.6.0",
    "ms": "^2.1.2",
    "type-is": "^1.6.18",
    "uuid": "^8.3.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@types/koa": "^2.11.3",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|json)": [
      "npm run fmt:pkg",
      "npm run fmt",
      "git add"
    ],
    "*.ts": [
      "npm run lint:fix",
      "npm run lint"
    ]
  }
}
