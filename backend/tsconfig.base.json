{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "src/*": ["src/*"],
      "shared": ["../shared/src"]
    },
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  }
}
