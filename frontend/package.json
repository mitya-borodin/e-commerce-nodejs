{
  "scripts": {
    "build": "snowpack build",
    "fmt": "prettier --write '**/*.{js,ts,svelte}'",
    "fmt:pkg": "prettier-package-json --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "snowpack dev",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "history": "^5.0.0",
    "svelte": "^3.24.0",
    "universal-router": "^9.0.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@snowpack/app-scripts-svelte": "^1.8.1",
    "@snowpack/plugin-webpack": "^2.0.1",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/svelte": "^3.0.0",
    "@types/jest": "^26.0.8",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "postcss": "^7.0.32",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "prettier-plugin-svelte": "^1.1.0",
    "snowpack": "^2.7.5",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "svelte-preprocess": "^4.0.9",
    "tailwindcss": "^1.6.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|json|svelte)": [
      "npm run fmt:p",
      "npm run fmt",
      "git add"
    ],
    "*.ts": [
      "npm run lint:fix",
      "npm run lint"
    ]
  }
}
