{
  "name": "@rtcts/ishop-shared",
  "description": "Entities, enums, sets for ishop project",
  "author": "Dmitriy Borodin <dmitriy@borodin.site> (http://borodin.site)",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "version": "1.2.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/ishop-shared.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --tsconfig tsconfig.build.json",
    "fmt": "prettier --write **/*.{ts,js,json}",
    "lint": "tsdx lint src test --fix",
    "test": "tsdx test",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "prepare": "tsdx build --tsconfig tsconfig.build.json",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "outdated": "npm-check-updates",
    "upgrade": "npm-check-updates -u --target minor"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose"
    }
  },
  "lint-staged": {
    "*.(ts|js|json)": [
      "pretty-quick --staged --pattern **/*.{ts,js,json} --verbose --bail"
    ],
    "src/**/*.(ts|js)": [
      "npm run lint"
    ],
    "test/**/*.(ts|js)": [
      "npm run lint"
    ]
  },
  "size-limit": [
    {
      "path": "dist/ishop-shared.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/ishop-shared.esm.js",
      "limit": "20 KB"
    }
  ],
  "peerDependencies": {
    "@rtcts/isomorphic": "^1.6.1",
    "@rtcts/utils": "^1.6.1",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0"
  },
  "devDependencies": {
    "@rtcts/isomorphic": "^1.6.1",
    "@rtcts/utils": "^1.6.1",
    "@size-limit/preset-small-lib": "^4.9.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "npm-check-updates": "^11.1.1",
    "prettier": "^2.2.1",
    "size-limit": "^4.9.2",
    "pretty-quick": "^3.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  }
}
