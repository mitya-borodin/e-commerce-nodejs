{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["web_modules/.types/*"],
      "src/*": ["src/*"]
    },
    "types": [
      "@types/jest",
      "@types/mocha",
      "@testing-library/jest-dom",
      "@testing-library/svelte",
      "svelte"
    ],
    "experimentalDecorators": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
