{
  "name": "e-commerce-front",
  "private": true,
  "version": "1.1.2",
  "license": "MIT",
  "scripts": {
    "start": "snowpack dev",
    "fmt": "prettier --write \"**/*.{ts,js,json}\"",
    "lint": "eslint . --ext .ts --fix",
    "test": "web-test-runner \"src/**/*.test.ts\"",
    "build": "snowpack build --verbose",
    "outdated": "npm-check-updates",
    "upgrade": "npm-check-updates -u --target minor"
  },
  "browserslist": ">0.75%, not ie 11, not UCAndroid >0, not OperaMini all",
  "dependencies": {
    "@rtcts/browser": "^1.6.1",
    "@rtcts/ishop-shared": "^1.2.1",
    "@rtcts/isomorphic": "^1.6.1",
    "@rtcts/utils": "^1.6.1",
    "classnames": "^2.2.6",
    "eventemitter3": "^4.0.7",
    "history": "^5.0.0",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "mobx": "^6.1.5",
    "svelte": "^3.32.2",
    "universal-router": "^9.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|json|svelte)": [
      "npm run fmt"
    ],
    "src/**/*.(ts|js)": [
      "npm run lint"
    ],
    "test/**/*.(ts|js)": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@snowpack/plugin-svelte": "^3.5.2",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^2.3.0",
    "@snowpack/web-test-runner-plugin": "^0.2.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@types/snowpack-env": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@web/test-runner": "^0.12.15",
    "chai": "^4.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "eslint-watch": "^7.0.0",
    "http-proxy": "^1.18.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.1.1",
    "postcss": "^8.2.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.3",
    "snowpack": "^3.0.11",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "svelte-preprocess": "^4.6.6",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.1.4",
    "webpack-bundle-analyzer": "^4.4.0"
  }
}
