{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "src/*": [
        "src/*"
      ]
    },
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
  },
}