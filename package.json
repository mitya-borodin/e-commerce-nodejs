{
  "scripts": {
    "bootstrap": "lerna bootstrap --ignore-prepublish",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "fmt": "lerna run fmt",
    "ncu": "lerna exec 'ncu -u --semverLevel major'",
    "ncu:check": "lerna exec 'ncu'",
    "start:backend": "cd ./packages/backend && npm start",
    "start:frontend": "cd ./packages/frontend && npm start",
    "start:shared": "cd ./packages/shared && npm start",
    "link:shared": "cd ./packages/shared && npm link && cd ../backend && npm link @rtcts/ishop-shared && cd ../frontend && npm link @rtcts/ishop-shared"
  },
  "name": "ishop",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "dependencies": {
    "np": "^6.4.0",
    "npm-check-updates": "^7.1.1"
  }
}
