{
  "version": "1.0.12",
  "scripts": {
    "bootstrap": "lerna exec \"del node_modules dist build web_modules && npm i\"",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "fmt": "lerna run fmt",
    "ncu": "lerna exec \"ncu -u --semverLevel major\"",
    "ncu:check": "lerna exec \"ncu\"",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd ./packages/backend && npm start",
    "start:frontend": "cd ./packages/frontend && npm start",
    "start:shared": "cd ./packages/shared && npm start"
  },
  "name": "ishop",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/rush": "^5.33.2",
    "del-cli": "^3.0.1",
    "lerna": "^3.22.1",
    "npm-check-updates": "^7.1.1",
    "concurrently": "^5.3.0"
  }
}
