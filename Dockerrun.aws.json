{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "nginx-ssl",
      "host": {
        "sourcePath": "/ssl"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "borodindmitriy/e-commerce-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-ssl",
          "containerPath": "/usr/share/nginx/ssl",
          "readOnly": true
        }
      ],
      "links": ["frontend", "backend"],
      "memory": 128
    },
    {
      "name": "frontend",
      "image": "borodindmitriy/e-commerce-front",
      "hostname": "frontend",
      "essential": false,
      "memory": 128
    },
    {
      "name": "backend",
      "image": "borodindmitriy/e-commerce-back",
      "hostname": "backend",
      "essential": false,
      "memory": 128
    }
  ]
}
